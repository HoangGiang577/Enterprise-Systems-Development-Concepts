<div class="register-container">
    <div class="container-fluid">
        <div class="row">
            <h3>Đăng kí</h3>

            <div class="col-12">
                <input id="txtEmail" type="email" placeholder="Nhập dịa chỉ email">
                <input id="txtName" type="text" placeholder="Nhập họ và tên">
                <input id="txtPhone" type="number" placeholder="Nhập số điện thoại">
                <input id="txtAdd" type="text" placeholder="Nhập số địa chỉ">
                <input id="txtPassword" type="password" placeholder="Nhập mật khẩu">
                <input id="txtRePassword" type="password" placeholder="Nhập lại mật khẩu">
            </div>
            <div class="col-12">
                <button id="btnRegister">Đăng kí</button>
            </div>

        </div>
    </div>
</div>