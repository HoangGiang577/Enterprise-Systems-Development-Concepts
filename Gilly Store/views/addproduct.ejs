<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quản lý sản phẩm</title>
    <link rel="icon" href="./images/logo.png">
    <base href="http://localhost:3000">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.12.1/css/all.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.6/jquery.simplePagination.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.min.js" integrity="sha512-u9akINsQsAkG9xjc1cnGF4zw5TFDwkxuc9vUp5dltDWYCSmyd0meygbvgXrlc/z7/o4a19Fb5V0OUE58J7dcyw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="./js/product.js"></script>
    <script>
        let product = <%- JSON.stringify(product)%>
    </script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-4">
            <input type="hidden" id="txtId" value="">
            <input type="text" id="txtName" placeholder="Nhập tên sản phẩm">
            <input type="number" id="txtPrice" placeholder="Nhập giá sản phẩm">
            <input type="number" id="txtDiscount" max="100" placeholder="Nhập khuyến mãi sản phẩm">
            <input type="string" id="txtSize" placeholder="Nhập size sản phẩm">
            <input type="text" id="txtSlug" placeholder="Nhập slug sản phẩm">
            <select id="txtParent">
                <% cate.forEach(function (c) {%>
                    <option value="<%- c._id%>"><%- c.Name%></option>
                <%})%>
            </select>
            <select id="txtStatus">
                <option value="0">Chưa kích hoạt</option>
                <option value="1">Kích hoạt</option>
            </select>
            <input type="url" id="txtImage" placeholder="Nhập url ảnh">
            <div>
                <button id="btnAdd">Thêm</button>
                <button id="btnDel">Xoá</button>
                <button id="btnEdit">Sửa</button>
            </div>
        </div>
        <div class="col-8">
            <table>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Sửa</th>
                </tr>
                <% product.forEach(function (p) {%>
                    <tr>
                        <td><%- p.Name%></td>
                        <td><%- p.Price%></td>
                        <td>
                            <button class="btn-edit" id="<%- p._id%>" >
                                <i class="far fa-edit" ></i>
                            </button>
                        </td>
                    </tr>
                <%})%>
            </table>
        </div>
    </div>
</div>
</body>
</html>